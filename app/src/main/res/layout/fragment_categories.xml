<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <android.support.v7.widget.Toolbar android:id="@+id/tb_categories_bar"
                                       android:layout_width="match_parent"
                                       android:layout_height="@dimen/title_bar_height"
                                       app:contentInsetStart="0dp">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_categories_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/categories"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <com.jude.easyrecyclerview.EasyRecyclerView android:id="@+id/erv_categories_list"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:scrollbars="none"></com.jude.easyrecyclerview.EasyRecyclerView>
</LinearLayout>